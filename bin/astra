
import click
import os
from logging import DEBUG, INFO
from astra.utils import log

from astra.contrib.apogeenet.cli import apogeenet
from astra.contrib.classifier.cli import classifier

# Common options.
@click.group()
@click.option("-v", "verbose", default=False, is_flag=True,
              help="verbose mode")
@click.pass_context
def cli(context, verbose):
    context.ensure_object(dict)
    context.obj["verbose"] = verbose

    # TODO: This isn't correctly followed for sqlalchemy output. 
    # It defaults to verbose!
    log.set_level(DEBUG if verbose else INFO)


# Add 'run' sub-commands.
@click.group()
@click.pass_context
def run(context):
    print("IN RUN")
    pass
    
run.add_command(apogeenet)
run.add_command(classifier)

cli.add_command(run)


if __name__ == "__main__":
    cli(obj=dict())
